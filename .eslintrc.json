{
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "extends": ["eslint:recommended", "airbnb-base", "plugin:prettier/recommended"],
  "rules": {
    "class-methods-use-this": "off",
    "import/extensions": ["error", "always"],
    "max-depth": ["error", 2],
    "no-ternary": "error",
    "no-else-return": "error",
    "max-lines-per-function": ["error", 15]
  },
  "plugins": ["prettier"],
  "overrides": [
    {
      "files": ["./__tests__/*"],
      "rules": {
        "max-depth": "off",
        "max-lines-per-function": "off",
        "no-new": "off"
      }
    }
  ]
}
